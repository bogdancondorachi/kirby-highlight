{
  "name": "bogdancondorachi/kirby-highlight",
  "description": "Server-side syntax highlighting for Kirby CMS",
  "type": "kirby-plugin",
  "version": "0.2.0",
  "license": "MIT",
  "homepage": "https://github.com/bogdancondorachi/kirby-highlight",
  "authors": [
    {
      "name": "Bogdan Condorachi",
      "email": "bogdan.condorachi@gmail.com",
      "homepage": "https://plugins.getkirby.com/bogdancondorachi"
    }
  ],
  "require": {
    "php": ">=8.3",
    "getkirby/composer-installer": "^1.2",
    "tempest/highlight": "^2.3"
  },
  "scripts": {
    "dist": "composer install --no-dev --optimize-autoloader"
  },
  "config": {
    "optimize-autoloader": true,
    "allow-plugins": {
      "getkirby/composer-installer": true
    }
  },
  "extra": {
    "installer-name": "highlight"
  }
}
